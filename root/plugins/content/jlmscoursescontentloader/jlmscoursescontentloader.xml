<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content">
	<name>Content - JoomlaLMS Courses Content Loader</name>
	<author>JoomlaLMS Team</author>
	<creationDate>January 2010</creationDate>
	<copyright>(C) 2006 - 2010 JoomlaLMS | Elearning software</copyright>
	<license>www.joomlalms.com</license>
	<authorEmail>info@joomlalms.com</authorEmail>
	<authorUrl>www.joomlalms.com</authorUrl>
	<version>1.0.6</version>
	<description>Plugin designed to display courses content, preload javascripts, etc.</description>
	<files>
		<filename plugin="jlmscoursescontentloader">jlmscoursescontentloader.php</filename>
		<filename>jlmscoursescontentloader.xml</filename>
	</files>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="courses_ids" type="text" default="" description="IDs of courses, comma separated" label="IDs of courses" />
				<field name="resources_path" type="text" default="" description="Absolute path like /home/account/public_html/courses/" label="Path to courses resources" />
			</fieldset>

		</fields>
	</config>
</extension>